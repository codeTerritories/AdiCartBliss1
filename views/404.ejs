        <div class="error-message">Page Not Found</div>
        
        <!-- Return to Home Page Link -->
        <p><a href="/">Return to Home Page</a></p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
